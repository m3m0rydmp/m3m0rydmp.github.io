{
  "name": "m3m0rydmp-portfolio",
  "version": "1.0.0",
  "description": "Cyberpunk-themed writeup showcase",
  "homepage": "https://m3m0rydmp.github.io",
  "private": true,
  "dependencies": {
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^7.9.5",
    "react-scripts": "5.0.1",
    "remark-gfm": "^4.0.0"
  },
  "scripts": {
    "sync:writeups": "node scripts/generateWriteups.js",
    "prestart": "npm run sync:writeups",
    "start": "react-scripts start",
    "prebuild": "npm run sync:writeups",
    "build": "react-scripts build && npm run postbuild",
    "postbuild": "powershell -Command \"Copy-Item build/index.html build/403.html; Copy-Item build/index.html build/500.html; Copy-Item build/index.html build/502.html; Copy-Item build/index.html build/503.html\"",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "deploy": "npm run build && gh-pages -d build"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^5.0.0"
  }
}
